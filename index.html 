<body>
    <div class="calculadora-container">
        <div class="dolar-input-container">
            <input type="number" id="precio-dolar" class="dolar-input" placeholder="Precio del dólar (Ej: 158.92)" value="158.92">
        </div>

        <div class="display" id="display">0</div>

        <div class="botones">
            <button class="boton limpiar" onclick="limpiar()">C</button>
            <button class="boton" onclick="borrarUltimo()">DEL</button>
            <button class="boton operador" onclick="agregarOperador('/')">/</button>
            <button class="boton operador" onclick="agregarOperador('*')">*</button>
            
            <button class="boton" onclick="agregarNumero('7')">7</button>
            <button class="boton" onclick="agregarNumero('8')">8</button>
            <button class="boton" onclick="agregarNumero('9')">9</button>
            <button class="boton operador" onclick="agregarOperador('-')">-</button>
            
            <button class="boton" onclick="agregarNumero('4')">4</button>
            <button class="boton" onclick="agregarNumero('5')">5</button>
            <button class="boton" onclick="agregarNumero('6')">6</button>
            <button class="boton operador boton-largo" onclick="agregarOperador('+')">+</button>
            
            <button class="boton" onclick="agregarNumero('1')">1</button>
            <button class="boton" onclick="agregarNumero('2')">2</button>
            <button class="boton" onclick="agregarNumero('3')">3</button>

            <button class="boton cero-largo" onclick="agregarNumero('0')">0</button>
            <button class="boton" onclick="agregarNumero('.')">.</button>
            <button class="boton igual" onclick="calcular()">=</button>
        </div>
        
        <div class="resultados">
            <p id="resultado-bs">Total en Bs: 0</p>
            <p id="resultado-usd">Total en USD: 0</p>
        </div>
    </div>

    <script>
        const display = document.getElementById('display');
        const resultadoBs = document.getElementById('resultado-bs');
        const resultadoUsd = document.getElementById('resultado-usd');
        const precioDolarInput = document.getElementById('precio-dolar');
        let expresion = '';

        function agregarNumero(valor) {
            expresion += valor;
            display.innerText = expresion;
        }

        function agregarOperador(operador) {
            expresion += operador;
            display.innerText = expresion;
        }

        function limpiar() {
            expresion = '';
            display.innerText = '0';
            resultadoBs.innerText = 'Total en Bs: 0';
            resultadoUsd.innerText = 'Total en USD: 0';
        }

        function borrarUltimo() {
            expresion = expresion.slice(0, -1);
            if (expresion === '') {
                display.innerText = '0';
            } else {
                display.innerText = expresion;
            }
        }

        function calcular() {
            try {
                const totalDolares = eval(expresion);
                
                display.innerText = totalDolares;
                
                const precioDolar = parseFloat(precioDolarInput.value);
                if (isNaN(precioDolar) || precioDolar <= 0) {
                    alert('Por favor, ingresa un precio válido para el dólar.');
                    limpiar();
                    return;
                }
                
                const totalBolivares = totalDolares * precioDolar;
                
                resultadoBs.innerText = `Total en Bs: ${totalBolivares.toFixed(2)}`;
                resultadoUsd.innerText = `Total en USD: ${totalDolares.toFixed(2)}`;
                
                expresion = totalDolares.toString();
            } catch (error) {
                display.innerText = 'Error';
                expresion = '';
            }
        }
    </script>
</body>
</html>
