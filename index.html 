            box-sizing: border-box;
        }

        /* Pantalla de visualización */
        .display {
            background-color: #444;
            color: white;
            padding: 15px;
            text-align: right;
            border-radius: 5px;
            margin-bottom: 15px;
            font-size: 2.5em;
            word-break: break-all;
            min-height: 50px;
            box-sizing: border-box;
        }

        /* Contenedor de los botones */
        .botones {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 10px;
        }

        /* Estilos de los botones */
        .boton {
            background-color: #555;
